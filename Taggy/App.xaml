<Application x:Class="Taggy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Taggy"
             StartupUri="View\MainView.xaml">
    <Application.Resources>
        <sys:Double x:Key="SplitterWidth">3</sys:Double>
        <SolidColorBrush x:Key="SplitterBackground" Color="#FF7B7B7B"></SolidColorBrush>
        <Style x:Key="BrowseButton" TargetType="Button">
            <Setter Property="Padding" Value="5,3,5,3"></Setter>
        </Style>
        <Style x:Key="DescriptionLabel" TargetType="Label">
            <Setter Property="Padding" Value="0"></Setter>
            <Setter Property="Margin" Value="0"></Setter>
        </Style>
    </Application.Resources>
</Application>
